import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

plt.rcParams['figure.figsize'] = (10, 6)
sns.set_style("whitegrid")

df = pd.read_csv("sample_survey_data.csv")

display(df.head())

print(df.shape)
df.info()
print(df.isnull().sum())

display(df.describe())

mean_scores = df.drop(columns=["Respondent_ID"]).mean().sort_values(ascending=False)
display(mean_scores)

mean_scores.plot(kind="bar")
plt.xlabel("Survey Dimension")
plt.ylabel("Average Score (1â€“5)")
plt.xticks(rotation=45)
plt.tight_layout()
plt.show()

likert_columns = df.columns.drop("Respondent_ID")
likert_distribution = df[likert_columns].apply(pd.value_counts).fillna(0)
display(likert_distribution)

likert_distribution.T.plot(kind="bar", stacked=True)
plt.xlabel("Survey Question")
plt.ylabel("Number of Responses")
plt.legend(title="Rating", bbox_to_anchor=(1.05, 1))
plt.tight_layout()
plt.show()

correlation_matrix = df.drop(columns=["Respondent_ID"]).corr()
display(correlation_matrix)

sns.heatmap(correlation_matrix, annot=True, cmap="coolwarm", linewidths=0.5)
plt.tight_layout()
plt.show()

print("Key Insights:")
print("Overall Experience has the highest average score.")
print("Instructor Clarity strongly correlates with Overall Experience.")
print("Satisfaction levels are consistently high across respondents.")

print("Recommendations:")
print("Maintain strong instructional clarity.")
print("Improve resource quality where necessary.")
print("Collect follow-up qualitative feedback.")
